                                {
                                    @Html.AntiForgeryToken()

                                    <label>A View</label>
                                    <select id="drpAViewOption" class="form-control form-control-margin-bottom">
                                        <option value="Select">Select..</option>
                                        <option value="Industrial Area">Industrial Area</option>
                                        <option value="Forrest">Forrest</option>
                                        <option value="Prairie">Prairie</option>
                                        <option value="City">City</option>
                                        <option value="Kibbutz">Kibbutz</option>
                                        <option value="Sea/Ocean">Sea/Ocean</option>
                                        <option value="Tourism Center">Tourism Center</option>
                                        <option value="Parc">Parc</option>
                                        <option value="Mountatin">Mountain</option>
                                        <option value="City View">City View</option>
                                        <option value="N/A">N/A</option>
                                    </select>
                                    <input type="file" name="AView" id="AView" class="form-control form-control-margin-bottom" disabled="disabled" />
                                }
                            </div>
                            <div class="form-group">
                                <form id="frmAddRoomsAreasEnclosure">
                                    @Html.AntiForgeryToken()

                                    <label>Max Number of Rooms/Areas/Enclosures assigned</label>
                                    <select id="drpMaxRoomsAreasOption" class="form-control form-control-margin-bottom">
                                        <option value="Select">Select..</option>
                                        <option value="1">1</option>
                                        <option value="2">2</option>
                                        <option value="3">3</option>
                                        <option value="N/A">N/A</option>
                                    </select>
                                    <input type="submit" value="Save" class="btn btn-primary form-control" />
                                </form>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="form-group">
                                @using (Html.BeginForm("SaveCharacterizationPlaceInfo", "Venue", null, FormMethod.Post, new { enctype = "multipart/form-data", id = "frmAddPrivacy" }))
                                {
                                    @Html.AntiForgeryToken()

                                    <label>Privacy</label>
                                    <select id="drpPrivacyOption" class="form-control form-control-margin-bottom">
                                        <option value="Select">Select..</option>
                                        <option value="Separate event with separate entry">Separate event with separate entry</option>
                                        <option value="Multiple events, separate entry">Multiple events, separate entry</option>
                                        <option value="Multiple events, common entry">Multiple events, common entry</option>
                                        <option value="N/A">N/A</option>
                                    </select>
                                    <input type="file" name="Privacy" id="Privacy" class="form-control form-control-margin-bottom" disabled="disabled" />
                                }
                            </div>
                            <div class="form-group">
                                @using (Html.BeginForm("SaveCharacterizationPlaceInfo", "Venue", null, FormMethod.Post, new { enctype = "multipart/form-data", id = "frmAddPillars" }))
                                {
                                    @Html.AntiForgeryToken()

                                    <label>Pillars</label>
                                    <select id="drpPillarsOption" class="form-control form-control-margin-bottom">
                                        <option value="Select">Select..</option>
                                        <option value="No">No</option>
                                        <option value="Yes">Yes</option>
                                        <option value="N/A">N/A</option>
                                    </select>
                                    <input type="file" name="Pillars" id="Pillars" class="form-control form-control-margin-bottom" disabled="disabled" />
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div role="tabpanel" class="tab-pane" id="placedesc">
                <div class="content-container">
                    <form action="" method="post" id="frmPlaceDesc" novalidate="novalidate">
                        <div class="alert alert-success" id="alert-placedesc-success">
                            Successfully updated place description!
                        </div>

                        @Html.AntiForgeryToken()

                        <div class="row">
                            <div class="col-lg-12">
                                <div class="form-group">
                                    <label>Description of the Place</label>
                                    <textarea rows="6" cols="10" id="placedescription" name="placedescription" class="form-control"></textarea>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <label>Distinct Advantage 1</label>
                                    <textarea rows="6" cols="10" id="advantage1" name="advantage1" class="form-control"></textarea>
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <label>Distinct Advantage 2</label>
                                    <textarea rows="6" cols="10" id="advantage2" name="advantage2" class="form-control"></textarea>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="events-container">
                                    <div class="private-events-list">
                                        <div class="panel panel-info">
                                            <div class="panel-heading">
                                                <h3 class="panel-title">Social/Private Events</h3>
                                            </div>
                                            <div class="panel-body">
                                                <ul id="private-events"></ul>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="events-container">
                                    <div class="corporate-events-list">
                                        <div class="panel panel-info">
                                            <div class="panel-heading">
                                                <h3 class="panel-title">Business Events</h3>
                                            </div>
                                            <div class="panel-body">
                                                <ul id="corporate-events"></ul>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-12">
                                <input type="submit" value="Save" class="btn btn-primary form-control" />
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <div role="tabpanel" class="tab-pane" id="acttime">
                <div class="content-container">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="form-group">
                                <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#addVenueSchedModal">Set Schedule</button>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="table-responsive">
                                <table class="table table-bordered">
                                    <thead>
