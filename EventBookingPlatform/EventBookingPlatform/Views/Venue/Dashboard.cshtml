@{
    ViewBag.Title = "Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<input type="hidden" value="@Session["UserId"]" id="hostid" />

<h2>Venue List</h2>

<div class="row">
    <div class="col-lg-12">
        <ol class="breadcrumb">
            <li>
                <i class="fa fa-dashboard"></i> Dashboard
            </li>
            <li>
                Venue List
            </li>
        </ol>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="form-group">
            <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#addVenueModal">Add Venue</button>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="alert alert-info" id="alert-pending-venue-approval">
            <strong>You have venues that are pending for approval by the Admin.</strong>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="table-responsive">
            <table class="table table-bordered table-hover table-striped">
                <thead>
                    <tr>
                        <th>Venue Name</th>
                        <th>Status</th>
                        <th>Option</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        var venues = (IEnumerable<EventBookingPlatform.DAL.Entities.VenueInfo>)ViewData["VenueList"];

                        foreach (var venue in venues)
                        {
                            <tr>
                                <td>@venue.Name</td>
                                <td>
                                    @if (venue.Approved)
                                    {
                                        <p>Approved</p>
                                    }
                                    else
                                    {
                                        <p>Pending for Approval</p>
                                    }
                                </td>
                                <td>
                                    @if (venue.Approved)
                                    {
                                        @Html.ActionLink("View", "Info", "Venue", new { currentuserid = Session["UserId"].ToString(), venueid = venue.Pk_VenueId, venuename = venue.Name }, null)
                                    }
                                    else
                                    {
                                        <a href="#">Upload Business/Enterprise Certificate</a>
                                    }
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<div class="modal fade" id="addVenueModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel">Add Venue</h4>
            </div>
            <div class="modal-body">
                <div class="alert alert-success" id="alert-addvenue-success">
                    <strong>Congratulations! Successfully added a new venue!</strong><br />
                    You will receive an email when your venue has been approved.
                </div>

                <form id="frmAddVenue">
                    <div class="form-group">
                        @Html.AntiForgeryToken()
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" id="venuename" name="venuename" placeholder="Venue name" />
                    </div>
                    <div class="form-group">
                        <input type="submit" class="btn btn-primary form-control" value="Add" />
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>