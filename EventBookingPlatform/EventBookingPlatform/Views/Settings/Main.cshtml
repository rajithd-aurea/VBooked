            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
<!-- END -->

<!-- ADD VENUE SCHEDULE POP UP MODAL -->
<div class="modal fade bs-example-modal-sm" id="addVenueSchedModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog modal-sm" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel">Set Venue Schedule</h4>
            </div>
            <div class="modal-body">
                <div class="modal-contents">
                    <div class="alert alert-success" id="alert-addvenuesched">
                        <p class="img-for"></p>
                    </div>

                    @using (Html.BeginForm("", "", null, FormMethod.Post, new { id = "frmAddVenueSched" }))
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-group">
                            <label>Schedule For</label>
                            <select id="drpschedfor" class="form-control">
                                <option value="Select">Select..</option>
                                <option value="Regular days morning">Regular days morning</option>
                                <option value="Regular days afternoon">Regular days afternoon</option>
                                <option value="Regular days evening">Regular days evening</option>
                                <option value="Holiday morning">Holiday morning</option>
                                <option value="Holiday afternoon">Holiday afternoon</option>
                                <option value="Holiday evening">Holiday evening</option>
                                <option value="Shabbat / Hag entry">Shabbat / Hag entry</option>
                                <option value="Shabbat / Hag exit">Shabbat / Hag exit</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label>Duration</label>
                            <select id="drpduration" class="form-control">
                                <option value="Select">Select..</option>
                                <option value="3 hours">Up to 3 hours</option>
                                <option value="4 hours">Up to 4 hours</option>
                                <option value="5 hours">Up to 5 hours</option>
                                <option value="6 hours">Up to 6 hours</option>
