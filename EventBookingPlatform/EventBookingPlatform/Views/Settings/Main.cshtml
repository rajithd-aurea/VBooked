                            </select>
                        </div>
                        <div class="form-group">
                            <label>End Time</label>
                            <select id="drpEndTime" class="form-control">
                                <option value="Select">Select..</option>
                                <option value="06:30">06:30</option>
                                <option value="07:00">07:00</option>
                                <option value="07:30">07:30</option>
                                <option value="08:00">08:00</option>
                                <option value="08:30">08:30</option>
                                <option value="09:00">09:00</option>
                                <option value="10:00">10:00</option>
                                <option value="10:30">10:30</option>
                                <option value="11:00">11:00</option>
                                <option value="11:30">11:30</option>
                                <option value="12:00">12:00</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label>Overtime</label>
                            <select id="drpStartTime" class="form-control">
                                <option value="Select">Select..</option>
                                <option value="1 hour free">1 hour free</option>
                                <option value="Extra hours charge">Extra hours charge</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Set Schedule" class="btn btn-primary form-control" />
                        </div>
                    }
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
