@{
    ViewBag.Title = "Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Venue List</h2>

<div class="row">
    <div class="col-lg-12">
        <ol class="breadcrumb">
            <li>
                <i class="fa fa-dashboard"></i> Dashboard
            </li>
            <li>
                Venue List
            </li>
        </ol>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="form-group">
            <input type="button" class="btn btn-primary" value="Add Venue" />
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="table-responsive">
            <table class="table table-bordered table-hover table-striped">
                <thead>
                    <tr>
                        <th>Venue Name</th>
                        <th>Option</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        var venues = (List<EventBookingPlatform.DAL.Entities.VenueInfo>)ViewData["VenueList"];

                        foreach (var venue in venues)
                        {
                            <tr>
                                <td>@venue.Name</td>
                                <td>@Html.ActionLink("View", "Dashboard", "Host", new { hostid = Session["UserId"].ToString(), venueid = venue.Pk_VenueId }, null)</td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
    </div>
</div>