@{
    ViewBag.Title = "ForApproval";
    Layout = "~/Views/Admin/AdminPageTemplate.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">
            For Approval
        </h1>
        <ol class="breadcrumb">
            <li>
                Venues
            </li>
            <li>
                For Approval
            </li>
        </ol>

        <div class="table-responsive">
            <table class="table table-bordered table-hover table-striped">
                <thead>
                    <tr>
                        <th>Venue Name</th>
                        <th>Option</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        foreach (var venue in ViewBag.VenueList)
                        {
                            <tr>
                                <td>@venue.Name</td>
                                <td>@Html.ActionLink("Approve", "", "")</td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>