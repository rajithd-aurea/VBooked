@{
    ViewBag.Title = "Main";
    Layout = "~/Views/Host/HostPageTemplate.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <!-- Nav tabs -->
        <ul class="nav nav-tabs" role="tablist">
            <li role="presentation" class="active"><a href="#addplace" aria-controls="" role="tab" data-toggle="tab">Add Place</a></li>
            <li role="presentation"><a href="#contact" aria-controls="" role="tab" data-toggle="tab">Contact</a></li>
            <li role="presentation"><a href="#charplace" aria-controls="" role="tab" data-toggle="tab">Characterization Place</a></li>
            <li role="presentation"><a href="#placedesc" aria-controls="settings" role="tab" data-toggle="tab">Place Description</a></li>
            <li role="presentation"><a href="#acttime" aria-controls="settings" role="tab" data-toggle="tab">Activity Time</a></li>
            <li role="presentation"><a href="#halls" aria-controls="settings" role="tab" data-toggle="tab">Halls</a></li>
        </ul>

        <!-- Tab panes -->
        <div class="tab-content">
            <div role="tabpanel" class="tab-pane active" id="addplace">
                <div class="content-container">
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="form-group">
                                <label>Name of Venue</label>
                                <input type="text" id="venuename" class="form-control" />
                            </div>
                            <div class="form-group">
                                <label>Type of Venue</label>
                                <select id="venuename" class="form-control"></select>
                            </div>
                            <div class="form-group">
                                <label>Foundation Year</label>
                                <input type="text" id="foundationyear" class="form-control" />
                            </div>
                            <div class="form-group">
                                <label>Registration #</label>
                                <input type="text" id="regno" class="form-control" />
                            </div>
                            <div class="form-group">
                                <label>Renovation Year</label>
                                <input type="text" id="renovationyear" class="form-control" />
                            </div>
                            <div class="form-group">
                                <label>Area (sq)</label>
                                <input type="text" id="venuename" class="form-control" />
                            </div>
                            <div class="form-group">
                                <label>Open spaces of the place</label>
                                <input type="text" id="openspaces" class="form-control" />
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="form-group">
                                <label>Service</label>
                                <select id="service" class="form-control"></select>
                            </div>
                            <div class="form-group">
                                <label>Season Activity</label>
                                <select id="seasonactivity" class="form-control"></select>
                            </div>
                            <div class="form-group">
                                <label>Location</label>
                                <input type="text" id="location" class="form-control" />
                            </div>
                            <div class="form-group">
                                <label>Settlement</label>
                                <input type="text" id="settlement" class="form-control" />
                            </div>
                            <div class="form-group">
                                <label>Street</label>
                                <input type="text" id="street" class="form-control" />
                            </div>
                            <div class="form-group">
                                <label>Targeting</label>
                                <input type="text" id="targeting" class="form-control" />
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-12">
                            <input type="submit" value="Add" class="btn btn-primary form-control" />
                        </div>
                    </div>
                </div>
            </div>
            <div role="tabpanel" class="tab-pane" id="contact">
                <div class="content-container">
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="form-group">
                                <label>Phone</label>
                                <input type="text" id="phone" class="form-control" />
                            </div>
                            <div class="form-group">
                                <label>Additional Telephone</label>
                                <input type="text" id="telephone" class="form-control" />
                            </div>
                            <div class="form-group">
                                <label>Fax</label>
                                <input type="text" id="Fax" class="form-control" />
                            </div>
                            <div class="form-group">
                                <label>Email</label>
                                <input type="email" id="email" class="form-control" />
                            </div>
                            <div class="form-group">
                                <label>Position</label>
                                <input type="text" id="position" class="form-control" />
                            </div>
                            <div class="form-group">
                                <label>External Management Company Name</label>
                                <input type="text" id="extmanagement" class="form-control" />
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-12">
                            <input type="submit" value="Save" class="btn btn-primary form-control" />
                        </div>
                    </div>
                </div>
            </div>
            <div role="tabpanel" class="tab-pane" id="charplace">
                <div class="content-container">
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="form-group">
                                <label>Type of Construction</label>
                                <input type="file" id="phone" />
                            </div>
                            <div class="form-group">
                                <label>Open Areas</label>
                                <input type="file" id="openareas" />
                            </div>
                            <div class="form-group">
                                <label>A View</label>
                                <input type="file" id="view" />
                            </div>
                            <div class="form-group">
                                <label>Max Number of Rooms/Areas/Enclosures assigned</label>
                                <input type="file" id="roomsareasenclosures" />
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="form-group">
                                <label>Parking</label>
                                <input type="file" id="parking" />
                            </div>
                            <div class="form-group">
                                <label>Privacy</label>
                                <input type="file" id="privacy" />
                            </div>
                            <div class="form-group">
                                <label>Pages In</label>
                                <input type="file" id="pagein" />
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-12">
                            <input type="submit" value="Save" class="btn btn-primary form-control" />
                        </div>
                    </div>
                </div>
            </div>
            <div role="tabpanel" class="tab-pane" id="placedesc">
                <div class="content-container">
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="form-group">
                                <label>Description of the Place</label>
                                <textarea rows="6" cols="10" id="placedescription" class="form-control"></textarea>
                            </div>
                            <div class="form-group">
                                <label>Distinct Advantage</label>
                                <textarea rows="6" cols="10" id="advantage1" class="form-control"></textarea>
                            </div>
                            <div class="form-group">
                                <label>Distinct Advantage 2</label>
                                <textarea rows="6" cols="10" id="advantage2" class="form-control"></textarea>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="events-container">
                                <h3>Social/Private Events</h3>
                                <p>We can host private events type:</p>
                                <div class="events-list">
                                    <label class="checkbox-inline">
                                        <input type="checkbox" value="Value 1">Value 1
                                    </label>
                                    <label class="checkbox-inline">
                                        <input type="checkbox" value="Value 2">Value 2
                                    </label>
                                    <label class="checkbox-inline">
                                        <input type="checkbox" value="Value 3">Value 3
                                    </label>
                                    <label class="checkbox-inline">
                                        <input type="checkbox" value="Value 4">Value 4
                                    </label>
                                    <label class="checkbox-inline">
                                        <input type="checkbox" value="Value 5">Value 5
                                    </label>
                                </div>
                            </div>
                            <br />
                            <div class="events-container">
                                <h3>Business Events</h3>
                                <p>We can host corporate events type:</p>
                                <div class="events-list">
                                    <label class="checkbox-inline">
                                        <input type="checkbox" value="Value 1">Value 1
                                    </label>
                                    <label class="checkbox-inline">
                                        <input type="checkbox" value="Value 2">Value 2
                                    </label>
                                    <label class="checkbox-inline">
                                        <input type="checkbox" value="Value 3">Value 3
                                    </label>
                                    <label class="checkbox-inline">
                                        <input type="checkbox" value="Value 4">Value 4
                                    </label>
                                    <label class="checkbox-inline">
                                        <input type="checkbox" value="Value 5">Value 5
                                    </label>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-12">
                            <input type="submit" value="Save" class="btn btn-primary form-control" />
                        </div>
                    </div>
                </div>
            </div>
            <div role="tabpanel" class="tab-pane" id="acttime">
                <p>Add activity time here</p>
            </div>
            <div role="tabpanel" class="tab-pane" id="halls">
                <p>Add halls here</p>
            </div>
        </div>
    </div>
</div>