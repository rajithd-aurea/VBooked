@{
    ViewBag.Title = "ForApproval";
    Layout = "~/Views/Admin/AdminPageTemplate.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">
            For Approval
        </h1>
        <ol class="breadcrumb">
            <li>
                Venues
            </li>
            <li>
                For Approval
            </li>
        </ol>

        <div class="table-responsive">
            <table class="table table-bordered table-hover table-striped">
                <thead>
                    <tr>
                        <th>Venue Name</th>
                        <th>Option</th>
                    </tr>
                </thead>
                <tbody id="unapprovedVenueList">
                    @{
                        var venuelist = ViewBag.VenueList;

                        foreach (var venue in venuelist)
                        {
                            <tr>
                                <td><p>@venue.VenueInfo.Name</p></td>
                                <td>
                                    @Html.ActionLink("Download Certificate", "DownloadBusinessCertificate", "Venue", new { venueid = venue.VenueInfo.Pk_VenueId, email = string.Empty, venuename = string.Empty }, null) |
                                    @Html.ActionLink("Approve", "UpdateVenueStatus", "Venue", new { venueid = venue.VenueInfo.Pk_VenueId, email = venue.User.Email, venuename = venue.VenueInfo.Name, status = 1 }, null) |
                                    @Html.ActionLink("Deny", "UpdateVenueStatus", "Venue", new { venueid = venue.VenueInfo.Pk_VenueId, email = venue.User.Email, venuename = venue.VenueInfo.Name, status = 2 }, null) |
                                    @Html.ActionLink("Suspend", "UpdateVenueStatus", "Venue", new { venueid = venue.VenueInfo.Pk_VenueId, email = venue.User.Email, venuename = venue.VenueInfo.Name, status = 3 }, null)
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>