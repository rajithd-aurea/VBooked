@{
    ViewBag.Title = "Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<input type="hidden" value="@Session["UserId"]" id="hostid" />

<h2>Venue List</h2>

<div class="row">
    <div class="col-lg-12">
        <ol class="breadcrumb">
            <li>
                <i class="fa fa-dashboard"></i> Dashboard
            </li>
            <li>
                Venue List
            </li>
        </ol>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="form-group">
            <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#addVenueModal">Add Venue</button>
            <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#addVenueBusinessCertModal" id="btnAddBusinessCert">Upload Business Certificate</button>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="alert alert-info" id="alert-pending-venue-approval">
            <strong>You have venues that are pending for approval by the Admin.</strong>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="table-responsive">
            <table class="table table-bordered table-hover table-striped">
                <thead>
                    <tr>
                        <th></th>
                        <th>Venue Name</th>
                        <th>Status</th>
                        <th>Option</th>
                    </tr>
                </thead>
                <tbody id="venuelist">
                    @{
                        var venues = (IEnumerable<EventBookingPlatform.DAL.Entities.VenueInfo>)ViewData["VenueList"];

                        foreach (var venue in venues)
                        {
                            if (venue.Status == 1)
                            {
                                <tr>
                                    <td></td>
                                    <td>@venue.Name</td>
                                    <td><p class="venue-status-approved">Approved</p></td>
                                    <td>@Html.ActionLink("View", "Info", "Venue", new { currentuserid = Session["UserId"].ToString(), venueid = venue.Pk_VenueId, venuename = venue.Name }, null)</td>
                                </tr>
                            }
                            else if (venue.Status == 2)
                            {
                                <tr>
                                    <td></td>
                                    <td>@venue.Name</td>
                                    <td><p class="venue-status-denied">Denied</p></td>
                                    <td></td>
                                </tr>
                            }
                            else if (venue.Status == 3)
                            {
                                <tr>
                                    <td></td>
                                    <td>@venue.Name</td>
                                    <td><p class="venue-status-suspended">Suspended</p></td>
                                    <td></td>
                                </tr>
                            }
                            else
                            {
                                <tr>
                                    <td><input type="checkbox" value="@venue.Pk_VenueId" /></td>
                                    <td>@venue.Name</td>
                                    <td><p class="venue-status-pending-approval">Pending for Approval</p></td>
                                    <td></td>
                                </tr>
                            }
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- MODAL FOR ADDING VENUE -->
<div class="modal fade" id="addVenueModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel">Add Venue</h4>
            </div>
            <div class="modal-body">
                <div class="alert alert-success" id="alert-addvenue-success">
                    <strong>Congratulations! Successfully added a new venue!</strong><br />
                    You will receive an email when your venue has been approved.
                </div>

                <form id="frmAddVenue">
                    <div class="form-group">
                        @Html.AntiForgeryToken()
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" id="venuename" name="venuename" placeholder="Venue name" />
                    </div>
                    <div class="form-group">
                        <input type="submit" class="btn btn-primary form-control" value="Add" />
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
<!-- END -->

<!-- MODAL FOR UPLOADING BUSINES/ENTERPRISE CERTIFICATE -->
<div class="modal fade" id="addVenueBusinessCertModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel">Add Venue Business Certificate</h4>
            </div>
            <div class="modal-body">
                <div class="modal-contents">
                    <div class="alert alert-success" id="alert-addbusinesscertificate">
                        <p class="img-for"></p>
                    </div>
                    <div class="form-group">
                        @using (Html.BeginForm("UploadBusinessCertificate", "Venue", null, FormMethod.Post, new { enctype = "multipart/form-data", id = "frmAddBusinessCert" }))
                        {
                            <label>Certificate for Starting a Business/Enterprise Ltd.</label><br />
                            <small>Accepted formats: JPG or PDF. 3MB max size.</small>
                            <input type="hidden" id="venueId" class="form-control form-control-margin-bottom" />
                            <input type="file" name="BusinessCert" id="BusinessCert" class="form-control form-control-margin-bottom" />
                            <input type="submit" value="Save" class="btn btn-primary form-control" />
                        }
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
<!-- END -->